<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:backgroundTint="#1E1E1E"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Kayıt Başlığı -->
        <TextView
            android:id="@+id/audioTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kayıt - 01"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <!-- İlerleme çubuğu ve süre gösterimi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <!-- Sesin oynatma ilerleme çubuğu -->
            <ProgressBar
                android:id="@+id/audioProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="4dp"
                android:progress="0"
                android:max="100"
                android:progressTint="#03DAC5"
                android:indeterminate="false"/>

            <!-- Süre göstergesi -->
            <TextView
                android:id="@+id/audioDurationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

        <!-- Oynatma ve Alarm Butonları -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <ImageButton
                android:id="@+id/playButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@null"
                android:contentDescription="Oynat"
                android:src="@drawable/ic_baseline_play_arrow_24"
                app:tint="#FFFFFF" />

            <ImageButton
                android:id="@+id/alarmButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@null"
                android:contentDescription="Alarm Kur"
                android:src="@drawable/ic_baseline_alarm_24"
                app:tint="#03DAC5" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
